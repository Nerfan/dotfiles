# sets the font
#font pango:Cousine for Powerline Regular 10
font pango:Terminess Powerline Regular 9

#########
## BAR ##
#########

# allow i3blocks to show status of Caps Lock
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks

# start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        # the -t flag allows transparency with i3-gaps
        i3bar_command i3bar -t
        # dock, hide, or invisible
        mode hide
        position top
        # disable clicking and mouse wheel to switch workspace
        bindsym button1 nopk
        bindsym button4 nopk
        bindsym button5 nopk
        status_command i3blocks
        tray_output primary
        strip_workspace_numbers yes
        height 24
        colors {
                background          $bar
                #                   border  bg      text
                focused_workspace   $bar    $bar    #ffffff
                inactive_workspace  $bar    $bar    #777777
                active_workspace    $bar    $bar    #ffffff
                urgent_workspace    $bar    $bar    #900000
                binding_mode        $bar    $bar    #ffffff
        }
}

# class                 border    backgr.   text      indicator   child_border
client.focused          $border   #ffffff   #ffffff   $border     $border
client.focused_inactive $inactive #5f676a   #ffffff   $inactive   $inactive
client.unfocused        $inactive #222222   #888888   $inactive   $inactive
client.urgent           #2f343a   #900000   #ffffff   #900000     #900000
client.placeholder      #000000   #0c0c0c   #ffffff   #000000     #0c0c0c

client.background       #ffffff
# set windows to not have a title bar and have a border
for_window [class="^.*"] border pixel 10
hide_edge_borders smart

# set default gaps
gaps inner 12
gaps outer 12

# set up a toggle to turn gaps on or off
set $mode_gaps "Toggle gaps: (1) off (2) normal (3) ricey (-) decrease (=) increase"
bindsym $mod+g mode $mode_gaps
mode $mode_gaps {
    bindsym 1 mode "default", gaps inner all set 0, gaps outer all set 0
    bindsym 2 mode "default", gaps inner all set 8, gaps outer all set 12
    bindsym 3 mode "default", gaps inner all set 60, gaps outer all set 10
    bindsym plus gaps inner all plus 5, gaps outer all plus 5
    bindsym minus gaps inner all minus 5, gaps outer all minus 5
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

